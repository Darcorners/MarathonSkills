<Window x:Class="MarathonSkills.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills"
        mc:Ignorable="d"
        Title="MainWindow" Style="{DynamicResource base_window}" Loaded="Window_Loaded" >
    <Grid>
        <Frame Content="Frame" Margin="0,0,0,76" Source="/MarathonSkills;component/Pages/MainPage.xaml" NavigationUIVisibility="Hidden"/>
        <Rectangle Fill="{DynamicResource dark_grey}"  Margin="0,392,0,0"/>
        <Label HorizontalAlignment="Center" Foreground="White" Content="{Binding Time, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="0,370,0,0"/>
    </Grid>
</Window>
